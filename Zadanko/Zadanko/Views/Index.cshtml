@model Prostokat

<form asp-action="Oblicz" method="post">
    <label for="wysokosc">Wysokość:</label>
    <input type="number" id="wysokosc" name="wysokosc" min="1" max="1000000" required />

    <label for="szerokosc">Szerokość:</label>
    <input type="number" id="szerokosc" name="szerokosc" min="1" max="1000000" required />

    <label for="jednostka">Jednostka:</label>
    <select id="jednostka" name="jednostka">
        <option value="Milimetry">Milimetry</option>
        <option value="Centymetry">Centymetry</option>
        <option value="Metry">Metry</option>
    </select>

    <button type="submit">Oblicz</button>
</form>